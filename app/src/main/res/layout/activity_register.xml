<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/bar_layout"
        />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/backwall6"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="20dp"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:src="@drawable/profile_image_add"
            android:id="@+id/pImage"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignRight="@+id/pImage"
            android:layout_alignBottom="@+id/pImage"
            android:layout_marginBottom="17dp"
            android:src="@drawable/plus_red" />

        <EditText
            android:layout_below="@id/pImage"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/userName"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:met_floatingLabel="normal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="Name"
            android:textSize="16dp"
            android:paddingLeft="15dp"
            android:textColorHint="@color/darkgrey_gn"
            android:background="@drawable/sansi_edittext"
            android:backgroundTint="@color/mdgrey"
            />
        <EditText
            android:layout_below="@id/userName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/email"
            android:inputType="textEmailAddress"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:met_floatingLabel="normal"
            android:hint="Email"
            android:textSize="16dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="15dp"
            android:textColorHint="@color/darkgrey_gn"
            android:background="@drawable/sansi_edittext"
            android:backgroundTint="@color/mdgrey"
            />

        <EditText
            android:layout_below="@id/email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/pass"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:met_floatingLabel="normal"
            android:hint="Password"
            android:textSize="16dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"

            android:paddingLeft="15dp"
            android:textColorHint="@color/darkgrey_gn"
            android:background="@drawable/sansi_edittext"
            android:backgroundTint="@color/mdgrey"
            />
        <EditText
            android:layout_below="@id/pass"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/passre"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"
            app:met_floatingLabel="normal"
            android:hint="Re Enter Password"
            android:textSize="16dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"

            android:paddingLeft="15dp"
            android:textColorHint="@color/darkgrey_gn"
            android:background="@drawable/sansi_edittext"
            android:backgroundTint="@color/mdgrey"
            />

        <Button
            android:layout_below="@id/passre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnRegister"
            android:text="Register"
            android:textColor="#fff"
            android:background="@drawable/mybutton"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            />
        <ProgressBar
            android:id="@+id/registerationprogress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            />

    </RelativeLayout>


</RelativeLayout>