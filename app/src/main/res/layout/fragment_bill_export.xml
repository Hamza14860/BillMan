<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backwall2"
    tools:context=".Fragments.BillExportFragment">


    <RelativeLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:gravity="center_horizontal"
            android:layout_margin="15dp"
            android:id="@+id/tvSt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EXPORT BILL"
            android:textColor="@color/white"
            android:textSize="28sp"
            />
        <Button
            android:layout_below="@id/tvSt"
            android:layout_centerHorizontal="true"
            android:text="Convert Text to PDF"
            android:textColor="@color/white"
            android:scaleType="centerCrop"
            android:backgroundTint="@color/lightred"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/btnPdf"
            android:drawableLeft="@drawable/converttopdf"
            android:layout_marginTop="8dp"
            />

        <Button
            android:layout_below="@id/btnPdf"
            android:layout_centerHorizontal="true"
            android:text="Share Text to Whatsapp"
            android:textColor="@color/white"
            android:scaleType="centerCrop"
            android:backgroundTint="@color/green"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/btnWhatsapp"

            android:drawableLeft="@drawable/whatsappicon"
            android:layout_marginTop="8dp"
            />
        <Button
            android:layout_below="@id/btnWhatsapp"
            android:layout_centerHorizontal="true"
            android:text="Share Text"
            android:textColor="@color/white"
            android:scaleType="centerCrop"
            android:backgroundTint="@color/darkgrey_gn"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/ic_share_white_24dp"
            android:id="@+id/btnShareText"
            android:layout_marginTop="8dp"
            />

    </RelativeLayout>
</FrameLayout>