<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backwall4"
    tools:context=".Fragments.HomehFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageButton
            android:elevation="4dp"
            android:id="@+id/btnBillMan"
            android:background="@drawable/billman"
            android:layout_margin="20dp"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageButton
            android:elevation="4dp"
            android:src="@drawable/expmann"
            android:id="@+id/btnExpMan"
            android:layout_margin="20dp"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageButton
            android:visibility="invisible"
            android:id="@+id/btnHelp"
            android:background="@drawable/helpp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>