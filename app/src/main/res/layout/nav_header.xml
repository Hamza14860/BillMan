<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/NavProfileImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/contact_photo_def"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:textStyle="bold"
        android:id="@+id/NavName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:text="Name"
        android:textColor="#fff"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/NavProfileImage"
        />

    <TextView
        android:id="@+id/NavEmail"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="info@email.com"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/NavName"
        android:paddingTop="3dp"
        android:visibility="gone"
        />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/profieSettings"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/ic_edit_white_24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>